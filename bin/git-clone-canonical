#!/usr/bin/env python
import os
import sys


REPO_URL='git://github.com/rconradharris/git-clone-canonical'
REPO_PATH = '/usr/local/git-clone-canonical'


def clone(name):
    print 'cloning', name
    pass


def search(substring):
    print 'searching', substring


def update():
    print 'updating'
    pass


def main():
    if '--update' in sys.argv:
        update()
        return

    if not os.path.exists(REPO_PATH):
        print >> sys.stderr, "Run git-clone-canonical --update first"
        sys.exit(1)

    if '--search' in sys.argv:
        search(sys.argv[-1])
        return

    clone(sys.argv[1])



if __name__ == '__main__':
    main()
